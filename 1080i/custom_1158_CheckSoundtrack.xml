<?xml version="1.0" encoding="UTF-8"?>
<window type="dialog" id="1158">
	<onload>SetProperty(TBSO,$INFO[ListItem.Path]/theme.mp3,home)</onload>
	<onload>RunScript(script.embuary.helper,action=lookforfile,file=$INFO[Window(Home).Property(TBSO)],prop=theme_ready)</onload>
	<visible>System.IdleTime(2)</visible>
	<visible>!ListItem.IsCollection</visible>
	<visible>!String.Contains(ListItem.Path,thumb:) + !String.Contains(ListItem.Path,image:) + !String.Contains(ListItem.Path,plugin)</visible>
	<visible>Container.Content(movies) | [Container.Content(tvshows) + !Player.Playing] | [Container.Content(seasons) + !Player.Playing]</visible>
	<visible>!Window.IsActive(movieinformation)</visible>
	<visible>!System.HasActiveModalDialog</visible>
	<visible>Window.IsActive(videos) + Skin.HasSetting(playTheme)</visible>
	<controls></controls>
</window>