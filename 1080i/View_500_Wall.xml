<?xml version="1.0" encoding="UTF-8"?>
<includes>
	<include name="WallSquareOverlay">
		<control type="image">
			<width>240</width>
			<height>240</height>
			<aspectratio>scale</aspectratio>
			<texture border="1" colordiffuse="44FFFFFF">black.png</texture>
			<bordersize>2</bordersize>
			<include>FocusFadeOutAnimation</include>
		</control>
	</include>
	<include name="WallSquareFocus">
		<control type="image">
			<width>240</width>
			<height>240</height>
			<texture border="10">thumbs/thumbnail_focused.png</texture>
			<include>FocusFadeInAnimation</include>
		</control>
	</include>
	<!-- Addon Wall -->
	<include name="AddonWall">
		<control type="group">
			<visible>Control.IsVisible(500) + !Window.IsActive(addoninformation)</visible>
			<include>ViewAnimation</include>
			<control type="panel" id="500">
				<left>120</left>
				<top>179</top>
				<width>1680</width>
				<height>720</height>
				<onleft>SetProperty(MediaMenu,True,home)</onleft>
				<onleft>SetFocus(9050)</onleft>
				<onright>50060</onright>
				<onup>500</onup>
				<ondown>500</ondown>
				<pagecontrol>50060</pagecontrol>
				<scrolltime tween="quadratic" easing="out">300</scrolltime>
				<itemlayout height="240" width="240" condition="!Container.Content(genres)">
					<control type="image">
						<width>240</width>
						<height>240</height>
						<aspectratio>scale</aspectratio>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<bordertexture border="2">thumbs/panel_border3.png</bordertexture>
						<bordersize>2</bordersize>
					</control>
					<control type="image">
						<left>140</left>
						<width>100</width>
						<height>100</height>
						<texture>overlays/addons/enabled.png</texture>
						<aspectratio align="center" aligny="top">keep</aspectratio>
						<visible>ListItem.Property(Addon.IsInstalled)</visible>
						<bordersize>2</bordersize>
					</control>
					<include>WallSquareOverlay</include>
				</itemlayout>
				<focusedlayout height="240" width="240" condition="!Container.Content(genres)">
					<control type="image">
						<width>240</width>
						<height>240</height>
						<aspectratio>scale</aspectratio>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<bordertexture border="2">thumbs/panel_border3.png</bordertexture>
						<bordersize>2</bordersize>
					</control>
					<control type="image">
						<left>140</left>
						<width>100</width>
						<height>100</height>
						<texture>overlays/addons/enabled.png</texture>
						<aspectratio align="center" aligny="top">keep</aspectratio>
						<visible>ListItem.Property(Addon.IsInstalled)</visible>
						<bordersize>2</bordersize>
					</control>
					<include>WallSquareOverlay</include>
					<include>WallSquareFocus</include>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="50060">
				<left>ScrollbarIconsLeft</left>
				<top>179</top>
				<width>8</width>
				<height>720</height>
				<onleft>50</onleft>
				<onright>noop</onright>
				<ondown>50060</ondown>
				<onup>50060</onup>
				<showonepage>false</showonepage>
				<texturesliderbackground />
				<texturesliderbar colordiffuse="55ffffff" border="1">scrollbar/texturesliderbar2.png</texturesliderbar>
				<texturesliderbarfocus border="1">scrollbar/texturesliderbar2.png</texturesliderbarfocus>
				<animation effect="fade" start="100" end="0" time="500" delay="500" condition="!Control.HasFocus(50060) + !Container.Scrolling">Conditional</animation>
			</control>
		</control>
	</include>
	<!-- Picture Wall -->
	<include name="PictureWall">
		<control type="group">
			<visible>Control.IsVisible(500) + !Window.IsActive(addoninformation)</visible>
			<include>ViewAnimation</include>
			<top>-85</top>
				<control type="image">
					<left>-30</left>
					<top>-30</top>
					<width>2040</width>
					<height>1277</height>
					<texture background="true">black.png</texture>
					<animation effect="fade" end="85" condition="true">Conditional</animation>
				</control>
			<control type="panel" id="500">
				<left>60</left>
				<top>135</top>
				<width>1710</width>
				<height>980</height>
				<onleft>SetProperty(MediaMenu,True,home)</onleft>
				<onleft>SetFocus(9050)</onleft>
				<onright>50060</onright>
				<onup>500</onup>
				<ondown>500</ondown>
				<pagecontrol>50060</pagecontrol>
				<preloaditems>2</preloaditems>
				<visible>!Container.Content(addons)</visible>
				<scrolltime tween="quadratic" easing="out">300</scrolltime>
				<itemlayout height="490" width="560">
				<control type="image">
					<top>20</top>
					<left>110</left>
						<width>450</width>
						<height>450</height>
						<texture background="true">black.png</texture>
					</control>
					<control type="image">
					<left>110</left>
					<top>20</top>
						<width>450</width>
						<height>450</height>
						<aspectratio>scale</aspectratio>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<bordertexture border="2">thumbs/panel_border3.png</bordertexture>
						<bordersize>2</bordersize>
					</control>
					<control type="image">
					<left>110</left>
						<top>420</top>
						<width>450</width>
						<height>50</height>
						<texture>black.png</texture>
						<bordersize>2</bordersize>
						<colordiffuse>bbffffff</colordiffuse>
					</control>
					<control type="label">
					<left>110</left>
						<top>425</top>
						<width>450</width>
						<height>45</height>
						<font>font13_title_sel</font>
						<textoffsetx>15</textoffsetx>
						<textcolor>white</textcolor>
						<info>ListItem.Label</info>
					</control>
					<control type="label">
					<left>110</left>
					<top>425</top>
						<width>450</width>
						<height>45</height>
						<font>font13_title_sel</font>
						<align>right</align>
						<textoffsetx>15</textoffsetx>
						<textcolor>white</textcolor>
						<info>ListItem.Label2</info>
					</control>
					<control type="image">
					<left>110</left>
					<top>20</top>
						<width>450</width>
						<height>450</height>
						<aspectratio>scale</aspectratio>
						<texture border="1" colordiffuse="44FFFFFF">black.png</texture>
						<bordersize>2</bordersize>
						<include>FocusFadeOutAnimation</include>
					</control>
				</itemlayout>
				<focusedlayout height="490" width="560">
					<control type="image">
						<left>80</left>
						<width>510</width>
						<height>490</height>
						<texture diffuse="tajo/mask_cover3.png">tajo/backani.gif</texture>
						<colordiffuse>ddffffff</colordiffuse>
					</control>
					<control type="image">
					<top>20</top>
					<left>110</left>
						<width>450</width>
						<height>450</height>
						<texture background="true">black.png</texture>
					</control>
					<control type="image">
					<top>20</top>
					<left>110</left>
						<width>450</width>
						<height>450</height>
						<aspectratio>scale</aspectratio>
						<texture background="true">$INFO[ListItem.Icon]</texture>
						<bordertexture border="2">thumbs/panel_border3.png</bordertexture>
						<bordersize>2</bordersize>
					</control>
					<control type="image">
					<left>110</left>
						<top>420</top>
						<width>450</width>
						<height>50</height>
						<texture>black.png</texture>
						<bordersize>2</bordersize>
						<colordiffuse>bbffffff</colordiffuse>
					</control>
					<control type="label">
					<top>425</top>
					<left>110</left>
						<width>450</width>
						<height>45</height>
						<textcolor>themecolor</textcolor>
						<font>font13_title_sel</font>
						<textoffsetx>15</textoffsetx>
						<info>ListItem.Label</info>
						<animation effect="fade" end="100" start="70" time="200" tween="sine" easing="inout">Focus</animation>
						<animation effect="fade" start="100" end="70" time="200" tween="sine" easing="inout">UnFocus</animation>
					</control>
					<control type="label">
					<top>425</top>
					<left>110</left>
						<width>450</width>
						<height>45</height>
						<align>right</align>
						<font>font13_title_sel</font>
						<textcolor>themecolor</textcolor>
						<textoffsetx>15</textoffsetx>
						<info>ListItem.Label2</info>
						<animation effect="fade" end="100" start="70" time="200" tween="sine" easing="inout">Focus</animation>
						<animation effect="fade" start="100" end="70" time="200" tween="sine" easing="inout">UnFocus</animation>
					</control>
					<control type="image">
					<top>20</top>
					<left>110</left>
						<width>450</width>
						<height>450</height>
						<aspectratio>scale</aspectratio>
						<texture border="1" colordiffuse="44FFFFFF">black.png</texture>
						<bordersize>2</bordersize>
						<include>FocusFadeOutAnimation</include>
					</control>
					<control type="image">
						<left>79</left>
						<top>-1</top>
						<width>512</width>
						<height>492</height>
						<texture diffuse="tajo/mask_cover3.png">tajo/mask78.png</texture>
						<colordiffuse>dd000000</colordiffuse>
					</control>
				</focusedlayout>
			</control>
			<control type="scrollbar" id="50060">
				<include>ScrollBar_Vertical</include>
				<left>ScrollbarIconsLeft</left>
				<top>150</top>
				<height>950</height>
				<onleft>500</onleft>
				<onright>500</onright>
				<visible allowhiddenfocus="true">Control.IsVisible(500)</visible>
			</control>
		</control>
	</include>
</includes>