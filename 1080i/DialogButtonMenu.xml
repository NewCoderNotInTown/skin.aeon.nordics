<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol>9000</defaultcontrol>
	<include>DialogOpenCloseAnimation</include>
	<controls>
		<control type="image">
			<animation effect="fade" end="95" condition="true">Conditional</animation>
			<width>2000</width>
			<height>1200</height>
			<texture>black.png</texture>
		</control>
		<control type="image">
			<description>LOGO</description>
			<left>705</left>
			<top>60</top>
			<width>470</width>
			<height>200</height>
			<aspectratio>keep</aspectratio>
			<texture>aeon-tajo2.png</texture>
		</control>
		<control type="image">
			<description>LOGO</description>
			<left>705</left>
			<top>60</top>
			<width>470</width>
			<height>200</height>
			<aspectratio>keep</aspectratio>
			<colordiffuse>Skin.String(flat_back)</colordiffuse>
			<texture>aeon-tajo3.png</texture>
		</control>
		<control type="group">
			<top>350</top>
			<control type="list" id="9000">
				<width>1120</width>
				<height>1080</height>
				<left>400</left>
				<top>0</top>
				<onleft>9000</onleft>
				<onright>9000</onright>
				<onup>9000</onup>
				<ondown>9000</ondown>
				<align>center</align>
				<itemlayout width="1120" height="60">
					<control type="label">
						<width>1120</width>
						<height>60</height>
						<font>font35</font>
						<align>center</align>
						<textcolor>grey2</textcolor>
						<textoffsetx>15</textoffsetx>
						<selectedcolor>Skin.String(flat_back)</selectedcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</itemlayout>
				<focusedlayout width="1120" height="60">
					<control type="label">
						<width>1120</width>
						<height>60</height>
						<textoffsetx>15</textoffsetx>
						<align>center</align>
						<font>titleshelf3</font>
						<textcolor>Skin.String(flat_back)</textcolor>
						<selectedcolor>Skin.String(flat_back)</selectedcolor>
						<label>$INFO[ListItem.Label]</label>
					</control>
				</focusedlayout>
				<content>
					<item>
						<label>$LOCALIZE[13012]</label>
						<onclick>Quit()</onclick>
						<visible>System.ShowExitButton</visible>
					</item>
					<item>
						<label>$LOCALIZE[13016]</label>
						<onclick>Powerdown()</onclick>
						<visible>System.CanPowerDown</visible>
					</item>
					<item>
						<label>$LOCALIZE[20150]</label>
						<onclick>AlarmClock(shutdowntimer,Shutdown())</onclick>
						<visible>!System.HasAlarm(shutdowntimer)</visible>
						<visible>System.CanPowerDown | System.CanSuspend | System.CanHibernate</visible>
					</item>
					<item>
						<onclick>CancelAlarm(shutdowntimer)</onclick>
						<label>$LOCALIZE[20151]$INFO[System.Alarmpos, (,)]</label>
						<visible>System.HasAlarm(shutdowntimer)</visible>
					</item>
					<item>
						<onclick>Suspend()</onclick>
						<visible>System.CanSuspend</visible>
						<label>$LOCALIZE[13011]</label>
					</item>
					<item>
						<onclick>Hibernate()</onclick>
						<visible>System.CanHibernate</visible>
						<label>$LOCALIZE[13010]</label>
					</item>
					<item>
						<onclick>Reset()</onclick>
						<visible>System.CanReboot</visible>
						<label>$LOCALIZE[13013]</label>
					</item>
					<item>
						<onclick>dialog.close(all,true)</onclick>
						<onclick>System.LogOff</onclick>
						<label>$LOCALIZE[20126] $INFO[system.profilename]</label>
						<visible>System.HasLoginScreen | Integer.IsGreater(System.ProfileCount,1)</visible>
						<visible>System.Loggedon</visible>
					</item>
					<item>
						<onclick>InhibitIdleShutdown(true)</onclick>
						<label>$LOCALIZE[13017]</label>
						<visible>System.HasShutdown +!System.IsInhibit</visible>
					</item>
					<item>
						<onclick>InhibitIdleShutdown(false)</onclick>
						<label>$LOCALIZE[13018]</label>
						<visible>System.HasShutdown + System.IsInhibit</visible>
					</item>
				</content>
			</control>
		</control>
	</controls>
</window>