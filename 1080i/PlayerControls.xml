<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">202</defaultcontrol>
	<visible>Window.IsActive(PlayerControls) + !Window.IsActive(FullscreenVideo) + !Window.IsActive(Visualisation)</visible>
	<coordinates>
		<system>1</system>
		<left>0</left>
		<top>0</top>
	</coordinates>
	<controls>
		<control type="group">
			<animation effect="slide" start="0,-238" end="0,0" time="240" tween="quadratic">WindowOpen</animation>
			<animation effect="slide" end="0,-238" start="0,0" time="240" tween="quadratic">WindowClose</animation>
			<control type="grouplist" id="202">
				<height>144</height>
				<width>100%</width>
				<align>center</align>
				<scrolltime tween="sine">200</scrolltime>
				<orientation>horizontal</orientation>
				<onup>700</onup>
				<ondown>706</ondown>
				<onleft>202</onleft>
				<onright>202</onright>
				<control type="button" id="700">
					<texturefocus>tajo/recua4.png</texturefocus>
					<font>IconMediumMD</font>
					<label></label>
					<focusedcolor>Skin.String(theme_text)</focusedcolor>
					<width>100</width>
					<height>100</height>
					<onclick condition="Player.HasAudio">ActivateWindow(MusicPlaylist)</onclick>
					<onclick condition="Player.HasVideo">ActivateWindow(VideoPlaylist)</onclick>
				</control>
				<control type="button" id="600">
					<texturefocus>tajo/recua4.png</texturefocus>
					<font>IconMediumMD</font>
					<label></label>
					<focusedcolor>Skin.String(theme_text)</focusedcolor>
					<width>100</width>
					<height>100</height>
					<onclick>PlayerControl(Previous)</onclick>
				</control>
				<control type="button" id="601">
					<texturefocus>tajo/recua4.png</texturefocus>
					<font>IconMediumMD</font>
					<label></label>
					<focusedcolor>Skin.String(theme_text)</focusedcolor>
					<width>100</width>
					<height>100</height>
					<onclick>PlayerControl(Rewind)</onclick>
				</control>
				<control type="togglebutton" id="602">
					<texturefocus>tajo/recua4.png</texturefocus>
					<alttexturefocus>tajo/recua4.png</alttexturefocus>
					<focusedcolor>Skin.String(theme_text)</focusedcolor>
					<label></label>
					<altlabel></altlabel>
					<width>100</width>
					<height>100</height>
					<font>IconMediumMD</font>
					<usealttexture>Player.Paused | Player.Forwarding | Player.Rewinding</usealttexture>
					<onclick>PlayerControl(Play)</onclick>
				</control>
				<control type="button" id="603">
					<texturefocus>tajo/recua4.png</texturefocus>
					<font>IconMediumMD</font>
					<label></label>
					<focusedcolor>Skin.String(theme_text)</focusedcolor>
					<width>100</width>
					<height>100</height>
					<onclick>PlayerControl(Stop)</onclick>
				</control>
				<control type="button" id="604">
					<texturefocus>tajo/recua4.png</texturefocus>
					<font>IconMediumMD</font>
					<label></label>
					<focusedcolor>Skin.String(theme_text)</focusedcolor>
					<width>100</width>
					<height>100</height>
					<onclick>PlayerControl(Forward)</onclick>
				</control>
				<control type="button" id="605">
					<texturefocus>tajo/recua4.png</texturefocus>
					<font>IconMediumMD</font>
					<label></label>
					<focusedcolor>Skin.String(theme_text)</focusedcolor>
					<width>100</width>
					<height>100</height>
					<onclick>PlayerControl(Next)</onclick>
				</control>
				<control type="togglebutton" id="704">
					<texturefocus>tajo/recua4.png</texturefocus>
					<alttexturefocus>tajo/recua4.png</alttexturefocus>
					<focusedcolor>Skin.String(theme_text)</focusedcolor>
					<label></label>
					<altlabel></altlabel>
					<width>100</width>
					<height>100</height>
					<font>IconMediumMD</font>
					<usealttexture>Playlist.IsRandom</usealttexture>
					<onclick>PlayerControl(Random)</onclick>
				</control>
				<control type="button" id="707">
					<texturefocus>tajo/recua4.png</texturefocus>
					<font>IconMediumMD</font>
					<label>$VAR[MusicOSDRepeatButtonVar]</label>
					<focusedcolor>Skin.String(theme_text)</focusedcolor>
					<width>100</width>
					<height>100</height>
					<onclick>PlayerControl(Repeat)</onclick>
					<visible>!MusicPartyMode.Enabled</visible>
				</control>
				<control type="button" id="606">
					<texturefocus>tajo/recua4.png</texturefocus>
					<font>IconMediumMD</font>
					<label></label>
					<focusedcolor>Skin.String(theme_text)</focusedcolor>
					<width>100</width>
					<height>100</height>
					<onclick>Dialog.Close(All,true)</onclick>
					<onclick>Fullscreen</onclick>
				</control>
			</control>
		</control>
	</controls>
</window>